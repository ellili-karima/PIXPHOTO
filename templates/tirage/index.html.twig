    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class='text-center' id='prix'>Nos Prix</h3>
                    <table class='table'>
                        <tr class='text-center'>
                            <th>Tirage Standard</th>
                            <th>Tirage Identite</th>
                        </tr>
                        <tr>
                            <td>
                                <ul>
                                    {% for tirage in tirages %}
                                        {% if tirage.tirage == 'Tirage Standard' %}
                                            <li>{{tirage.format}} => {{tirage.prix}} €</li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    {% for tirage in tirages %}
                                        {% if tirage.tirage == 'Tirage Identite' %}
                                            <li>{{tirage.format}} => {{tirage.prix}} €</li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </section>
    	
{% endblock %}
